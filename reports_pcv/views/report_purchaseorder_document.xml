<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="purchaseorder_pcv_inh_report" model="ir.ui.view">
        <field name="name">purchaseorder.pcv.inh.report</field>
        <field name="inherit_id" ref="purchase.report_purchaseorder_document"/>
        <field name="arch" type="xml">

            <data>

                <xpath expr="//t/t/t[2]" position="after">
                    <div>
                        <table class="table-borderless mt-4">
                            <t t-if="o.sale_partner_id">
                                <tr>
                                    <td>
                                        <p><strong>Costumer:</strong> <span t-field="o.sale_partner_id"/></p>
                                    </td>
                                </tr>
                            </t>

                            <t t-if="o.event_name">
                                <tr>
                                    <td>
                                        <p><strong>Event:</strong> <span t-field="o.event_name"/></p>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="o.stand_number">
                                <tr>
                                    <td>
                                        <p><strong>Stand number:</strong> <span t-field="o.stand_number"/></p>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </xpath>

                <!-- TABLE HEADER: -->
                <xpath expr="//thead[1]/tr/th[2]" position="replace"></xpath>
                <xpath expr="//thead[1]/tr/th[3]" position="replace">
                    <th name="th_commitmentdate"><strong>Commitment Date</strong></th>
                </xpath>
                <xpath expr="//thead[1]/tr/th[4]" position="before"></xpath>

                <!-- TABLE LINES: -->
                <xpath expr="//td[@name='td_taxes']" position="after">
                    <td>
                        <t t-if="line.sale_commitment_date">
                            <span t-field="line.sale_commitment_date" t-options="{'widget':'date'}"/>
                        </t>
                    </td>
                </xpath>
                <xpath expr="//td[@name='td_taxes']" position="replace"></xpath>
                <xpath expr="//td[@class='text-center']" position="replace"></xpath>

            </data>

        </field>
        <field name="type">qweb</field>
        <field name="priority">999</field>
    </record>
</odoo>
