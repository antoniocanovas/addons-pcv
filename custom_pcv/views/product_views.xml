<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- Variants Special Prices: -->
    <record id="product_template_pcv_inh_form" model="ir.ui.view">
        <field name="name">product.template.pcv.inh.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tag_ids" position="after">
                <field name="tipo_calculo"/>
            </field>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="tipo_calculo" string="CÃ¡lculo variantes" attrs="{'invisible':[('tipo_calculo','=',False)]}">
                    <group name="tipo_time" attrs="{'invisible':[('tipo_calculo', '!=', 'time')]}">
                        <field name="horas_minimo"/>
                        <field name="inicio_extra" widget="timesheet_uom"/>
                        <field name="inicio_ordinario" widget="timesheet_uom"/>
                        <field name="final_ordinario" widget="timesheet_uom"/>
                        <field name="final_extra" widget="timesheet_uom"/>
                        <field name="hextra_factor"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>